{
  "name": "chandelier",
  "version": "1.0.0",
  "description": "production management for people who produce",
  "main": "app.js",
  "scripts": {
    "postinstall": "npm run mk & npm run build",
    "start": "node app.js",
    "deploy": "npm run test & npm run build",
    "dev": "npm run live-reload & npm run build:watch",
    "build": "npm run build:js & npm run build:css",
    "build:js": "browserify -t babelify src/js/main.js -o public/js/main.js",
    "build:watch": "watchify src/js/main.js -t babelify -o public/js/main.js & myth -w src/css/main.css public/css/main.css",
    "build:css": "myth src/css/main.css public/css/main.css & myth src/css/spinner.css public/css/spinner.css",
    "lint": "eslint **/*.js",
    "live-reload": "live-reload public/ --port 9082",
    "devserve": "NODE_ENV=development nodemon app.js --watch api",
    "test": "npm run test:back & npm run test:front",
    "test:back": "mocha test/back/**/*.js",
    "test:front": "mocha test/front/**/*.js --compilers js:babel/register --require test/front/setup/setup.js",
    "test:fwatch": "mocha test/front/**/*.js --compilers js:babel/register -w src/js/**/*.js --loglevel silent",
    "mk": "mkdir public/js & mkdir public/css"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/foundersandcoders/chandelier.git"
  },
  "author": "Roz, Mij, Neats",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/foundersandcoders/chandelier/issues"
  },
  "homepage": "https://github.com/foundersandcoders/chandelier",
  "dependencies": {
    "babelify": "^6.1.2",
    "bell": "^3.0.0",
    "browserify": "^10.2.3",
    "flux": "^2.0.3",
    "hapi": "^8.6.0",
    "hapi-auth-cookie": "^2.2.0",
    "joi": "^6.4.3",
    "myth": "^1.4.0",
    "object-assign": "^2.0.0",
    "pdfkit": "^0.7.1",
    "pg": "^4.3.0",
    "pg-hstore": "^2.3.2",
    "react": "^0.13.3",
    "react-pager": "^1.1.1",
    "react-router": "^0.13.3",
    "react-textarea-autosize": "^2.3.1",
    "superagent": "^1.2.0"
  },
  "devDependencies": {
    "babel": "^5.4.7",
    "babel-eslint": "^3.1.10",
    "eslint": "^0.22.1",
    "jsdom": "^3.1.1",
    "mocha": "^2.2.5",
    "rewire": "^2.3.3",
    "sinon": "^1.14.1",
    "watchify": "^3.2.1"
  },
  "engines": {
    "node": ">=0.12.0"
  }
}
